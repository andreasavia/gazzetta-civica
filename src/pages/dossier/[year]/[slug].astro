---
import Base from '../../../layouts/Base.astro';
import { getCollection } from 'astro:content';
import SchedaInformativa from '../../../components/SchedaInformativa.astro';
import IlDibattito from '../../../components/IlDibattito.astro';
import StructuredData from '../../../components/StructuredData.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import ShareButton from '../../../components/ShareButton.astro';
import { getLegge } from '../../../lib/leggi';

export async function getStaticPaths() {
  const dossiers = await getCollection('dossier');
  return dossiers.map((dossier) => ({
    params: {
      year: dossier.data.publishedDate.getFullYear().toString(),
      slug: dossier.data.urlSlug
    },
    props: { dossier },
  }));
}

const { dossier } = Astro.props;
const { Content } = await dossier.render();
const legge = dossier.data.legge ? getLegge(dossier.data.legge) : null;
const categories = legge?.['senato-teseo'] || [];

// Generate description with priority: excerpt > subtitle > auto-generated
const description =
  dossier.data.excerpt ||
  dossier.data.subtitle ||
  `Analisi e approfondimento: ${dossier.data.title}`;

// Get article URL
const site = 'https://andreasavia.github.io';
const base = '/gazzetta-civica';
const year = dossier.data.publishedDate.getFullYear();
const articlePath = `${base}/dossier/${year}/${dossier.data.urlSlug}/`;
const articleUrl = `${site}${articlePath}`;

// Use optional metadata with sensible defaults
const author = dossier.data.author || 'Gazzetta Civica';
const modifiedDate = dossier.data.modifiedDate || dossier.data.publishedDate;
const image = dossier.data.image;

// Breadcrumb navigation
const breadcrumbItems = [
  { name: 'Home', url: `${base}/` },
  { name: 'I Dossier', url: `${base}/dossier/` },
  { name: dossier.data.title, url: articlePath }
];
---

<Base
  title={dossier.data.title}
  description={description}
  type="article"
  publishedDate={dossier.data.publishedDate}
  modifiedDate={modifiedDate}
  author={author}
  image={image}
  tags={categories}
>
  <Breadcrumbs items={breadcrumbItems} />

  <article>
    {categories.length > 0 && (
      <div class="tags-wrapper">
        <div class="tags-header">
          {categories.map((cat: string) => (
            <span class="tag">{cat}</span>
          ))}
        </div>
      </div>
    )}
    <div class="article-tipo">
      <span class="tipo-badge tipo-badge--dossier">Dossier</span>
    </div>
    <h1>{dossier.data.title}</h1>
    {dossier.data.subtitle && <p class="subtitle">{dossier.data.subtitle}</p>}
    <div class="meta">
      <div class="meta-top">
        <span class="date">{dossier.data.publishedDate.toLocaleDateString('it-IT', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}</span>
        <ShareButton
          title={dossier.data.title}
          url={articleUrl}
          description={description}
        />
      </div>
    </div>

    <!-- Section 1: Cosa cambia -->
    <div class="cosa-cambia">
      <Content />
    </div>

    <!-- Section 2: Il Dibattito -->
    {dossier.data.legge && (
      <IlDibattito slug={dossier.data.urlSlug} collection="dossier" />
    )}

    <!-- Section 3: Scheda -->
    {dossier.data.legge && (
      <SchedaInformativa codice={dossier.data.legge} />
    )}
  </article>

  <StructuredData
    type="article"
    article={{
      title: dossier.data.title,
      description: description,
      publishedDate: dossier.data.publishedDate,
      modifiedDate: modifiedDate,
      author: author,
      url: articleUrl,
      image: image,
      tags: categories
    }}
  />

  <StructuredData
    type="breadcrumb"
    breadcrumb={{
      items: breadcrumbItems
    }}
  />

  <style>
    .article-tipo {
      margin-bottom: 0.75rem;
    }

    .tags-wrapper {
      position: relative;
    }

    .tags-wrapper::before,
    .tags-wrapper::after {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: 2rem;
      pointer-events: none;
      z-index: 1;
    }

    .tags-wrapper::before {
      left: 0;
      background: linear-gradient(to right, var(--color-bg) 0%, transparent 100%);
    }

    .tags-wrapper::after {
      right: 0;
      background: linear-gradient(to left, var(--color-bg) 0%, transparent 100%);
    }

    .tags-header {
      display: flex;
      flex-wrap: nowrap;
      justify-content: center;
      gap: 0.4rem;
      margin-bottom: 0.5rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
      padding: 0 1.5rem 0.25rem;
    }

    .tags-header::-webkit-scrollbar {
      display: none;
    }
  </style>
</Base>
