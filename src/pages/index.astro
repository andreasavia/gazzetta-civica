---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articoli', ({ data }) => !data.draft);
const sorted = allArticles.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf());

const dossiers = sorted.filter(a => a.data.tipo === 'dossier');
const inIterItems = sorted.filter(a => a.data.tipo === 'in-iter').slice(0, 3);


---

<Base
  title="Home"
  description="Un archivio aperto della legislazione italiana. Raccogliamo, organizziamo e rendiamo accessibili le leggi e i decreti pubblicati in Gazzetta Ufficiale."
>
  <div class="hero-wrapper">
    <section class="hero">
      <div class="hero-text">
        <h1 class="hero-title" id="hero-title"></h1>
        <p class="hero-subtitle" id="hero-subtitle"></p>
      </div>
    </section>
  </div>

  <section class="segnavia-section" id="segnavia">
    <div class="segnavia-inner">
      <div class="segnavia-left">
        <p class="segnavia-kicker">Newsletter settimanale</p>
        <p class="segnavia-pull"><em>Il Parlamento in sintesi,<br>ogni settimana.</em></p>
        <p class="segnavia-desc">
          I disegni di legge in corso e il Dossier della settimana,
          direttamente nella tua casella di posta.
        </p>
      </div>
      <div class="segnavia-right">
        <form id="newsletter-form" class="newsletter-form">
          <label class="form-label" for="newsletter-email">La tua email</label>
          <div class="form-row">
            <input
              type="email"
              id="newsletter-email"
              name="email"
              placeholder="nome@esempio.it"
              required
              autocomplete="email"
            />
            <button type="submit" id="newsletter-btn">
              <span class="btn-text">Iscriviti</span>
              <span class="btn-loading" style="display: none;">...</span>
            </button>
          </div>
          <div class="privacy-checkbox">
            <input type="checkbox" id="privacy-consent" name="privacy-consent" />
            <label for="privacy-consent">
              Accetto l'informativa sulla <a href="/gazzetta-civica/privacy">privacy</a>
            </label>
          </div>
        </form>
        <div id="newsletter-success" class="newsletter-message success" style="display: none;">
          Perfetto! Controlla la tua email per confermare l'iscrizione.
        </div>
        <div id="newsletter-error" class="newsletter-message error" style="display: none;">
          Qualcosa è andato storto. Riprova.
        </div>
        <div id="privacy-error" class="newsletter-message error" style="display: none;">
          Devi accettare l'informativa sulla privacy per iscriverti.
        </div>
      </div>
    </div>
  </section>


  <section class="come-funziona-section">
    <div class="come-funziona-inner">
      <p class="cf-eyebrow">Come funziona</p>
      <div class="cf-grid">
        <div class="cf-card">
          <span class="cf-num">01</span>
          <h3 class="cf-title">In Iter</h3>
          <p class="cf-body">
            Aggiornamenti rapidi sui disegni di legge appena presentati,
            sui decreti in discussione e sulle scadenze tecniche. Il modo
            più diretto per seguire le norme <em>prima</em> che diventino legge.
          </p>
        </div>
        <div class="cf-card">
          <span class="cf-num">02</span>
          <h3 class="cf-title">Il Dossier</h3>
          <p class="cf-body">
            Analisi approfondite delle norme approvate: cosa cambia nella
            vita quotidiana, il dibattito parlamentare in sintesi e le
            fonti ufficiali in un unico posto. Senza tecnicismi.
          </p>
        </div>
        <div class="cf-card">
          <span class="cf-num">03</span>
          <h3 class="cf-title">Segnavia</h3>
          <p class="cf-body">
            La rassegna settimanale: gli <em>In Iter</em> più rilevanti e il
            Dossier della settimana direttamente nella tua casella email.
            Per non perdere l'orientamento nel panorama normativo.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="content-section in-iter-section" id="in-iter">
    <h2>In Iter</h2>
    {inIterItems.length === 0 ? (
      <p class="empty-state">Nessun aggiornamento recente.</p>
    ) : (
      <div class="iter-grid">
        {inIterItems.map((article) => (
          <a
            class="iter-card"
            href={`/gazzetta-civica/articoli/${article.data.publishedDate.getFullYear()}/${article.data.urlSlug}/`}
          >
            <span class="iter-date">
              {article.data.publishedDate.toLocaleDateString('it-IT', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              })}
            </span>
            <h3>{article.data.title}</h3>
            {article.data.subtitle && (
              <p class="iter-excerpt">{article.data.subtitle}</p>
            )}
          </a>
        ))}
      </div>
    )}
    <a href="/gazzetta-civica/in-iter/" class="section-more-link">Tutti gli aggiornamenti →</a>
  </section>

  <section class="content-section" id="dossier">
    <h2>I Dossier</h2>

    {dossiers.length === 0 ? (
      <p class="empty-state">
        Nessun dossier pubblicato ancora.
      </p>
    ) : (
      <ul class="article-list" id="article-list">
        {dossiers.map((article) => (
          <li class="article-item">
            <a href={`/gazzetta-civica/articoli/${article.data.publishedDate.getFullYear()}/${article.data.urlSlug}/`}>
              <span class="article-date">
                {article.data.publishedDate.toLocaleDateString('it-IT', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </span>
              <h3>
                <span class="tipo-badge tipo-badge--dossier">Dossier</span>
                {article.data.title}
              </h3>
              {(article.data.excerpt || article.data.subtitle) && (
                <p class="article-excerpt">{article.data.excerpt || article.data.subtitle}</p>
              )}
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>



  <script>
    // Random hero headline with Playfair italic emphasis
    const headlines = [
      {
        title: 'Le nuove norme,<br><em>finalmente chiare.</em>',
        subtitle: 'Analisi imparziali delle leggi appena entrate in vigore, senza il legalese.'
      },
      {
        title: 'Il Parlamento lavora.<br><em>Noi lo raccontiamo.</em>',
        subtitle: 'Sintesi chiare e aggiornamenti rapidi sulla legislazione italiana.'
      }
    ];
    const randomHeadline = headlines[Math.floor(Math.random() * headlines.length)];
    document.getElementById('hero-title')!.innerHTML = randomHeadline.title;
    document.getElementById('hero-subtitle')!.textContent = randomHeadline.subtitle;



    // Newsletter form
    const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
    const newsletterBtn = document.getElementById('newsletter-btn') as HTMLButtonElement;
    const btnText = newsletterBtn?.querySelector('.btn-text') as HTMLElement;
    const btnLoading = newsletterBtn?.querySelector('.btn-loading') as HTMLElement;
    const successMsg = document.getElementById('newsletter-success') as HTMLElement;
    const errorMsg = document.getElementById('newsletter-error') as HTMLElement;
    const privacyError = document.getElementById('privacy-error') as HTMLElement;

    newsletterForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const privacyConsent = document.getElementById('privacy-consent') as HTMLInputElement;
      if (!privacyConsent.checked) {
        privacyError.style.display = 'block';
        successMsg.style.display = 'none';
        errorMsg.style.display = 'none';
        return;
      }

      const email = (document.getElementById('newsletter-email') as HTMLInputElement).value;

      btnText.style.display = 'none';
      btnLoading.style.display = 'inline';
      newsletterBtn.disabled = true;
      successMsg.style.display = 'none';
      errorMsg.style.display = 'none';
      privacyError.style.display = 'none';

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });

        if (response.ok) {
          newsletterForm.style.display = 'none';
          successMsg.style.display = 'block';
        } else {
          throw new Error('Failed');
        }
      } catch {
        errorMsg.style.display = 'block';
      } finally {
        btnText.style.display = 'inline';
        btnLoading.style.display = 'none';
        newsletterBtn.disabled = false;
      }
    });
  </script>

  <style>
    /* ── Hero ── */
    .masthead-label {
      display: inline-block;
      border-top: 1px solid var(--color-border);
      border-bottom: 1px solid var(--color-border);
      padding: 0.3rem 1.25rem;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.3em;
      color: var(--color-muted);
      margin-bottom: 1.5rem;
    }

    .hero-title {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 3.5rem;
      font-weight: 900;
      line-height: 1.1;
      margin-bottom: 1rem;
      color: var(--color-primary);
      letter-spacing: -0.01em;
    }

    .hero-title em {
      font-style: italic;
      font-weight: 700;
    }

    .hero-subtitle {
      font-size: 1.15rem;
      color: var(--color-muted);
      max-width: 500px;
      margin: 0 auto 2rem;
      line-height: 1.6;
      font-weight: 300;
    }

    .hero-ctas {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta-primary {
      background: var(--color-primary);
      color: white;
      padding: 0.9rem 2rem;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      text-decoration: none;
      border-radius: 2px;
      transition: background var(--transition-base);
    }

    .cta-primary:hover {
      background: #112347;
      color: white;
    }

    .cta-secondary {
      border: 1px solid var(--color-border);
      color: var(--color-primary);
      padding: 0.9rem 2rem;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      text-decoration: none;
      border-radius: 2px;
      transition: background var(--transition-base), border-color var(--transition-base);
    }

    .cta-secondary:hover {
      background: var(--color-bg);
      border-color: var(--color-primary);
    }

    /* ── Dossier section ── */
    #dossier {
      padding-left: 0;
      padding-right: 0;
    }

    /* ── Segnavia ── */
    .segnavia-section {
      background: #f0f3f8;
      padding: 4rem 0;
    }

    .segnavia-inner {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 2rem;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .segnavia-kicker {
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--color-muted);
      margin: 0 0 1rem;
    }

    .segnavia-pull {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 2rem;
      font-weight: 700;
      font-style: italic;
      color: var(--color-primary);
      line-height: 1.25;
      margin: 0 0 1.25rem;
    }

    .segnavia-desc {
      color: var(--color-muted);
      font-size: 0.95rem;
      line-height: 1.7;
      margin: 0;
    }

    .form-label {
      display: block;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--color-muted);
      margin-bottom: 0.6rem;
    }

    /* ── Come funziona ── */
    .come-funziona-section {
      background: var(--color-bg);
      border-bottom: 1px solid var(--color-border);
    }

    .come-funziona-inner {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 4rem 2rem;
    }

    .cf-eyebrow {
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.25em;
      color: var(--color-muted);
      margin: 0 0 2.5rem;
      text-align: center;
    }

    .cf-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 0;
    }

    .cf-card {
      padding: 0 2.5rem 0 0;
      border-right: 1px solid var(--color-border);
    }

    .cf-card:first-child {
      padding-left: 0;
    }

    .cf-card:last-child {
      border-right: none;
      padding-right: 0;
      padding-left: 2.5rem;
    }

    .cf-card:nth-child(2) {
      padding-left: 2.5rem;
    }

    .cf-num {
      display: block;
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 2.5rem;
      font-weight: 900;
      color: var(--color-border);
      line-height: 1;
      margin-bottom: 0.75rem;
    }

    .cf-title {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--color-primary);
      margin: 0 0 0.75rem;
    }

    .cf-body {
      font-size: 0.9rem;
      color: var(--color-muted);
      line-height: 1.7;
      margin: 0;
    }

    .cf-body em {
      font-style: italic;
      color: var(--color-text);
    }

    /* ── In Iter grid ── */
    .in-iter-section {
      padding-left: 0;
      padding-right: 0;
      padding-bottom: 3rem;
    }

    .iter-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      margin-bottom: 1rem;
      align-items: stretch;
    }

    .iter-card {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      padding: 1.25rem;
      border: 1px solid var(--color-border);
      background: var(--color-surface);
      border-radius: 2px;
      transition: border-color var(--transition-base), box-shadow var(--transition-base);
    }

    .iter-card:hover {
      border-color: var(--color-primary);
      box-shadow: 0 4px 20px rgba(26, 54, 93, 0.07);
    }

    .iter-date {
      display: block;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--color-muted);
      margin-bottom: 0.5rem;
    }

    .iter-card h3 {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 1rem;
      font-weight: 700;
      color: var(--color-primary);
      margin-bottom: 0.5rem;
      line-height: 1.35;
    }

    .iter-card:hover h3 {
      text-decoration: underline;
      text-underline-offset: 3px;
    }

    .iter-excerpt {
      font-size: 0.85rem;
      color: var(--color-muted);
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      margin: 0;
    }

    .section-more-link {
      display: block;
      margin-top: 1.5rem;
      text-align: right;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--color-primary);
      text-decoration: none;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      transition: opacity var(--transition-base);
    }

    .section-more-link:hover {
      opacity: 0.7;
    }


    /* ── Newsletter form ── */
    .newsletter-form {
      width: 100%;
      max-width: 460px;
      margin: 0 auto;
    }

    .form-row {
      display: flex;
      gap: 0.5rem;
    }

    .newsletter-form input[type="email"] {
      flex: 1;
      padding: 0.75rem 1rem;
      font-size: 0.95rem;
      font-family: 'Inter', sans-serif;
      border: 1px solid var(--color-border);
      border-radius: 2px;
      background: var(--color-surface);
      color: var(--color-text);
      transition: border-color var(--transition-base);
      min-width: 0;
    }

    .newsletter-form input[type="email"]:focus {
      outline: none;
      border-color: var(--color-primary);
    }

    .newsletter-form input[type="email"]::placeholder {
      color: var(--color-muted);
    }

    .newsletter-form button {
      padding: 0.75rem 1.5rem;
      font-size: 0.85rem;
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
      background: var(--color-primary);
      color: white;
      border: none;
      border-radius: 2px;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      transition: background var(--transition-base);
      white-space: nowrap;
    }

    .newsletter-form button:hover:not(:disabled) {
      background: #112347;
    }

    .newsletter-form button:disabled {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .privacy-checkbox {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 0.75rem;
      font-size: 0.85rem;
    }

    .privacy-checkbox input[type="checkbox"] {
      margin-top: 0.2rem;
      cursor: pointer;
    }

    .privacy-checkbox label {
      color: var(--color-muted);
      cursor: pointer;
      line-height: 1.4;
    }

    .privacy-checkbox a {
      color: var(--color-primary);
      text-decoration: underline;
    }

    .privacy-checkbox a:hover {
      color: #112347;
    }

    .newsletter-message {
      max-width: 480px;
      margin: 0 auto;
      padding: 1.25rem;
      border-radius: 4px;
      font-size: 1rem;
    }

    .newsletter-message.success {
      background: rgba(var(--color-green-rgb), 0.08);
      color: var(--color-green-dark);
    }

    .newsletter-message.error {
      background: rgba(var(--color-red-rgb), 0.08);
      color: var(--color-red);
    }

    @media (max-width: 768px) {
      .iter-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
      }

      .segnavia-inner {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .cf-grid {
        grid-template-columns: 1fr;
        gap: 0;
      }

      .cf-card {
        padding: 2rem 0;
        border-right: none;
        border-bottom: 1px solid var(--color-border);
      }

      .cf-card:last-child {
        border-bottom: none;
        padding-left: 0;
      }

      .cf-card:nth-child(2) {
        padding-left: 0;
      }
    }

    @media (max-width: 600px) {
      .hero-title {
        font-size: 2.25rem;
      }

      .hero-subtitle {
        font-size: 1rem;
      }

      .form-row {
        flex-direction: column;
      }

      .newsletter-form input[type="email"],
      .newsletter-form button {
        padding: 0.65rem 1rem;
      }

      .newsletter-form button {
        width: 100%;
      }


      .iter-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Base>
