---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const articles = await getCollection('articoli', ({ data }) => !data.draft);
const sortedArticles = articles.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf());

// Prepare article data for client-side filtering
const articlesData = sortedArticles.map(a => ({
  title: a.data.title,
  subtitle: a.data.subtitle || '',
  excerpt: a.data.excerpt || ''
}));
---

<Base
  title="Home"
  description="Un archivio aperto della legislazione italiana. Raccogliamo, organizziamo e rendiamo accessibili le leggi e i decreti pubblicati in Gazzetta Ufficiale."
>
  <div class="hero-wrapper">
    <section class="hero">
      <div class="hero-text">
        <h1 class="hero-title" id="hero-title"></h1>
        <p class="hero-subtitle" id="hero-subtitle"></p>
      </div>

      <form id="newsletter-form" class="newsletter-form">
        <div class="form-row">
          <input
            type="email"
            id="newsletter-email"
            name="email"
            placeholder="La tua email"
            required
            autocomplete="email"
          />
          <button type="submit" id="newsletter-btn">
            <span class="btn-text">Iscriviti</span>
            <span class="btn-loading" style="display: none;">...</span>
          </button>
        </div>
        <p class="form-note">Nessuno spam. Cancellati quando vuoi.</p>
      </form>

      <div id="newsletter-success" class="newsletter-message success" style="display: none;">
        Perfetto! Controlla la tua email per confermare l'iscrizione.
      </div>

      <div id="newsletter-error" class="newsletter-message error" style="display: none;">
        Qualcosa Ã¨ andato storto. Riprova.
      </div>
    </section>
  </div>

  <section class="content-section" id="articoli">
    <div class="section-header">
      <div class="search-box">
        <svg class="search-icon" width="18" height="18" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <input
          type="text"
          class="search-input"
          placeholder="Filtra articoli..."
          aria-label="Filtra articoli"
          id="search-input"
          autocomplete="off"
        />
      </div>
    </div>

    {sortedArticles.length === 0 ? (
      <p class="empty-state">
        Nessun articolo pubblicato ancora.
      </p>
    ) : (
      <ul class="article-list" id="article-list">
        {sortedArticles.map((article) => (
          <li class="article-item">
            <a href={`/gazzetta-civica/articoli/${article.data.publishedDate.getFullYear()}/${article.data.urlSlug}/`}>
              <span class="article-date">
                {article.data.publishedDate.toLocaleDateString('it-IT', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </span>
              <h3>{article.data.title}</h3>
              {(article.data.excerpt || article.data.subtitle) && (
                <p class="article-excerpt">{article.data.excerpt || article.data.subtitle}</p>
              )}
            </a>
          </li>
        ))}
      </ul>
    )}

    <p class="no-results" id="no-results" style="display: none;">
      Nessun articolo trovato.
    </p>
  </section>

  <script type="application/json" id="articles-data" set:html={JSON.stringify(articlesData)} />

  <script>
    // Random hero headline
    const headlines = [
      {
        title: 'Capire le nuove leggi,<br />senza il legalese.',
        subtitle: 'Sintesi chiare e analisi imparziali delle norme appena entrate in vigore.'
      },
      {
        title: 'Leggi nuove,<br />parole semplici.',
        subtitle: 'Iscriviti per ricevere analisi imparziali della legislazione italiana.'
      }
    ];
    const randomHeadline = headlines[Math.floor(Math.random() * headlines.length)];
    document.getElementById('hero-title')!.innerHTML = randomHeadline.title;
    document.getElementById('hero-subtitle')!.textContent = randomHeadline.subtitle;

    const input = document.getElementById('search-input') as HTMLInputElement;
    const list = document.getElementById('article-list');
    const noResults = document.getElementById('no-results');
    const articlesData = JSON.parse(document.getElementById('articles-data')?.textContent || '[]');

    let debounceTimer: ReturnType<typeof setTimeout>;

    function filterArticles(query: string) {
      if (!list) return;

      const items = list.querySelectorAll('.article-item');
      const normalizedQuery = query.toLowerCase().trim();
      let visibleCount = 0;

      items.forEach((item, i) => {
        const article = articlesData[i];
        if (!article) return;

        const matches = !normalizedQuery ||
          article.title.toLowerCase().includes(normalizedQuery) ||
          article.subtitle.toLowerCase().includes(normalizedQuery) ||
          article.excerpt.toLowerCase().includes(normalizedQuery);

        if (matches) {
          item.classList.remove('hidden');
          visibleCount++;
        } else {
          item.classList.add('hidden');
        }
      });

      // Show/hide no results message
      if (noResults) {
        noResults.style.display = visibleCount === 0 && normalizedQuery ? 'block' : 'none';
      }
    }

    input?.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value;
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => filterArticles(query), 100);
    });

    // Handle Escape key to clear search
    input?.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        input.value = '';
        filterArticles('');
        input.blur();
      }
    });

    // Newsletter form
    const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
    const newsletterBtn = document.getElementById('newsletter-btn') as HTMLButtonElement;
    const btnText = newsletterBtn?.querySelector('.btn-text') as HTMLElement;
    const btnLoading = newsletterBtn?.querySelector('.btn-loading') as HTMLElement;
    const successMsg = document.getElementById('newsletter-success') as HTMLElement;
    const errorMsg = document.getElementById('newsletter-error') as HTMLElement;

    newsletterForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = (document.getElementById('newsletter-email') as HTMLInputElement).value;

      btnText.style.display = 'none';
      btnLoading.style.display = 'inline';
      newsletterBtn.disabled = true;
      successMsg.style.display = 'none';
      errorMsg.style.display = 'none';

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });

        if (response.ok) {
          newsletterForm.style.display = 'none';
          successMsg.style.display = 'block';
        } else {
          throw new Error('Failed');
        }
      } catch {
        errorMsg.style.display = 'block';
      } finally {
        btnText.style.display = 'inline';
        btnLoading.style.display = 'none';
        newsletterBtn.disabled = false;
      }
    });
  </script>

  <style>
    .section-header {
      margin-bottom: 1.5rem;
    }

    .search-box {
      display: flex;
      align-items: center;
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 24px;
      padding: 0.65rem 1.25rem;
      max-width: 400px;
      margin: 0 auto;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .search-box:focus-within {
      border-color: var(--color-primary);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .search-icon {
      color: var(--color-muted);
      flex-shrink: 0;
      margin-right: 0.5rem;
      transition: color 0.2s ease;
    }

    .search-box:focus-within .search-icon {
      color: var(--color-primary);
    }

    .search-input {
      flex: 1;
      border: none;
      outline: none;
      background: transparent;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.9rem;
      color: var(--color-text);
      min-width: 0;
    }

    .search-input::placeholder {
      color: var(--color-muted);
      opacity: 0.8;
    }

    .no-results {
      color: var(--color-muted);
      font-style: italic;
      text-align: center;
      padding: 2rem 1rem;
    }

    /* Hero text */
    .hero-text {
      margin-bottom: 2.5rem;
    }

    /* Hero with newsletter */
    .hero-title {
      font-family: 'Montserrat', sans-serif;
      font-size: 3rem;
      line-height: 1.15;
      margin-bottom: 1rem;
      font-weight: 300;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      color: var(--color-muted);
      margin-bottom: 0;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    .newsletter-form {
      width: 100%;
      max-width: 460px;
      margin: 0 auto;
      align-self: stretch;
    }

    .form-row {
      display: flex;
      gap: 0.5rem;
    }

    .newsletter-form input[type="email"] {
      flex: 1;
      padding: 0.7rem 1rem;
      font-size: 1rem;
      font-family: 'Montserrat', sans-serif;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      background: var(--color-surface);
      color: var(--color-text);
      transition: border-color 0.2s ease;
      min-width: 0;
    }

    .newsletter-form input[type="email"]:focus {
      outline: none;
      border-color: #009246;
    }

    .newsletter-form input[type="email"]::placeholder {
      color: var(--color-muted);
    }

    .newsletter-form button {
      padding: 0.7rem 1.5rem;
      font-size: 1rem;
      font-family: 'Montserrat', sans-serif;
      font-weight: 600;
      background: #009246;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.2s ease, transform 0.1s ease;
      white-space: nowrap;
    }

    .newsletter-form button:hover:not(:disabled) {
      background: #007a3d;
    }

    .newsletter-form button:active:not(:disabled) {
      transform: scale(0.98);
    }

    .newsletter-form button:disabled {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .form-note {
      font-size: 0.9rem;
      color: var(--color-muted);
      margin-top: 0.75rem;
    }

    .newsletter-message {
      max-width: 480px;
      margin: 0 auto;
      padding: 1.25rem;
      border-radius: 8px;
      font-size: 1.1rem;
    }

    .newsletter-message.success {
      background: rgba(0, 146, 70, 0.1);
      color: #007a3d;
    }

    .newsletter-message.error {
      background: rgba(206, 43, 55, 0.1);
      color: #ce2b37;
    }

    @media (max-width: 600px) {
      .hero-title {
        font-size: 2rem;
      }


      .hero-subtitle {
        font-size: 1.1rem;
      }

      .hero-text {
        margin-bottom: 2rem;
      }

      .form-row {
        flex-direction: column;
      }

      .newsletter-form input[type="email"],
      .newsletter-form button {
        font-size: 0.95rem;
        padding: 0.65rem 1rem;
      }

      .newsletter-form button {
        width: 100%;
      }

      .search-box {
        max-width: none;
        padding: 0.6rem 1rem;
      }
    }
  </style>
</Base>
