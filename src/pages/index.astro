---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articoli', ({ data }) => !data.draft);
const sorted = allArticles.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf());

const dossiers = sorted.filter(a => a.data.tipo === 'dossier');
const inIterItems = sorted.filter(a => a.data.tipo === 'in-iter').slice(0, 3);

// Feed only dossier data to the client-side search JSON island
const dossiersData = dossiers.map(a => ({
  title: a.data.title,
  subtitle: a.data.subtitle || '',
  excerpt: a.data.excerpt || ''
}));
---

<Base
  title="Home"
  description="Un archivio aperto della legislazione italiana. Raccogliamo, organizziamo e rendiamo accessibili le leggi e i decreti pubblicati in Gazzetta Ufficiale."
>
  <div class="hero-wrapper">
    <section class="hero">
      <div class="hero-text">
        <div class="masthead-label">Edizione Digitale</div>
        <h1 class="hero-title" id="hero-title"></h1>
        <p class="hero-subtitle" id="hero-subtitle"></p>
        <div class="hero-ctas">
          <a href="#dossier" class="cta-primary">Ultimo Dossier</a>
          <a href="#segnavia" class="cta-secondary">Newsletter</a>
        </div>
      </div>
    </section>
  </div>

  <section class="segnavia-section" id="segnavia">
    <div class="segnavia-inner">
      <div class="segnavia-header">
        <h2 class="segnavia-title">ðŸ§­ Segnavia</h2>
        <p class="segnavia-desc">
          La rassegna settimanale di Gazzetta Civica: i disegni di legge in corso
          e il Dossier della settimana, direttamente nella tua casella di posta.
        </p>
      </div>

      <form id="newsletter-form" class="newsletter-form">
        <div class="form-row">
          <input
            type="email"
            id="newsletter-email"
            name="email"
            placeholder="La tua email"
            required
            autocomplete="email"
          />
          <button type="submit" id="newsletter-btn">
            <span class="btn-text">Iscriviti</span>
            <span class="btn-loading" style="display: none;">...</span>
          </button>
        </div>

        <div class="privacy-checkbox">
          <input
            type="checkbox"
            id="privacy-consent"
            name="privacy-consent"
          />
          <label for="privacy-consent">
            Accetto l'informativa sulla <a href="/gazzetta-civica/privacy">privacy</a>
          </label>
        </div>
      </form>

      <div id="newsletter-success" class="newsletter-message success" style="display: none;">
        Perfetto! Controlla la tua email per confermare l'iscrizione.
      </div>

      <div id="newsletter-error" class="newsletter-message error" style="display: none;">
        Qualcosa Ã¨ andato storto. Riprova.
      </div>

      <div id="privacy-error" class="newsletter-message error" style="display: none;">
        Devi accettare l'informativa sulla privacy per iscriverti.
      </div>
    </div>
  </section>

  <section class="content-section in-iter-section" id="in-iter">
    <h2>In Iter</h2>
    {inIterItems.length === 0 ? (
      <p class="empty-state">Nessun aggiornamento recente.</p>
    ) : (
      <div class="iter-grid">
        {inIterItems.map((article) => (
          <a
            class="iter-card"
            href={`/gazzetta-civica/articoli/${article.data.publishedDate.getFullYear()}/${article.data.urlSlug}/`}
          >
            <span class="iter-date">
              {article.data.publishedDate.toLocaleDateString('it-IT', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              })}
            </span>
            <h3>{article.data.title}</h3>
            {article.data.subtitle && (
              <p class="iter-excerpt">{article.data.subtitle}</p>
            )}
          </a>
        ))}
      </div>
    )}
    <a href="/gazzetta-civica/in-iter/" class="section-more-link">Tutti gli aggiornamenti â†’</a>
  </section>

  <section class="content-section" id="dossier">
    <div class="section-header">
      <h2>I Dossier</h2>
      <div class="search-box">
        <svg class="search-icon" width="18" height="18" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <input
          type="text"
          class="search-input"
          placeholder="Filtra dossier..."
          aria-label="Filtra dossier"
          id="search-input"
          autocomplete="off"
        />
      </div>
    </div>

    {dossiers.length === 0 ? (
      <p class="empty-state">
        Nessun dossier pubblicato ancora.
      </p>
    ) : (
      <ul class="article-list" id="article-list">
        {dossiers.map((article) => (
          <li
            class="article-item"
            data-title={article.data.title}
            data-subtitle={article.data.subtitle || ''}
            data-excerpt={article.data.excerpt || ''}
          >
            <a href={`/gazzetta-civica/articoli/${article.data.publishedDate.getFullYear()}/${article.data.urlSlug}/`}>
              <span class="article-date">
                {article.data.publishedDate.toLocaleDateString('it-IT', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </span>
              <h3>
                <span class="tipo-badge tipo-badge--dossier">Dossier</span>
                {article.data.title}
              </h3>
              {(article.data.excerpt || article.data.subtitle) && (
                <p class="article-excerpt">{article.data.excerpt || article.data.subtitle}</p>
              )}
            </a>
          </li>
        ))}
      </ul>
    )}

    <p class="no-results" id="no-results" style="display: none;">
      Nessun dossier trovato.
    </p>
  </section>

  <script type="application/json" id="articles-data" set:html={JSON.stringify(dossiersData)} />

  <script>
    // Random hero headline with Playfair italic emphasis
    const headlines = [
      {
        title: 'Le nuove norme,<br><em>finalmente chiare.</em>',
        subtitle: 'Analisi imparziali delle leggi appena entrate in vigore, senza il legalese.'
      },
      {
        title: 'Il Parlamento lavora.<br><em>Noi lo raccontiamo.</em>',
        subtitle: 'Sintesi chiare e aggiornamenti rapidi sulla legislazione italiana.'
      }
    ];
    const randomHeadline = headlines[Math.floor(Math.random() * headlines.length)];
    document.getElementById('hero-title')!.innerHTML = randomHeadline.title;
    document.getElementById('hero-subtitle')!.textContent = randomHeadline.subtitle;

    const input = document.getElementById('search-input') as HTMLInputElement;
    const list = document.getElementById('article-list');
    const noResults = document.getElementById('no-results');
    const articlesData = JSON.parse(document.getElementById('articles-data')?.textContent || '[]');

    let debounceTimer: ReturnType<typeof setTimeout>;

    function filterArticles(query: string) {
      if (!list) return;

      const items = list.querySelectorAll('.article-item');
      const normalizedQuery = query.toLowerCase().trim();
      let visibleCount = 0;

      items.forEach((item, i) => {
        const article = articlesData[i];
        if (!article) return;

        const matches = !normalizedQuery ||
          article.title.toLowerCase().includes(normalizedQuery) ||
          article.subtitle.toLowerCase().includes(normalizedQuery) ||
          article.excerpt.toLowerCase().includes(normalizedQuery);

        if (matches) {
          item.classList.remove('hidden');
          visibleCount++;
        } else {
          item.classList.add('hidden');
        }
      });

      if (noResults) {
        noResults.style.display = visibleCount === 0 && normalizedQuery ? 'block' : 'none';
      }
    }

    input?.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value;
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => filterArticles(query), 100);
    });

    input?.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        input.value = '';
        filterArticles('');
        input.blur();
      }
    });

    // Newsletter form
    const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
    const newsletterBtn = document.getElementById('newsletter-btn') as HTMLButtonElement;
    const btnText = newsletterBtn?.querySelector('.btn-text') as HTMLElement;
    const btnLoading = newsletterBtn?.querySelector('.btn-loading') as HTMLElement;
    const successMsg = document.getElementById('newsletter-success') as HTMLElement;
    const errorMsg = document.getElementById('newsletter-error') as HTMLElement;
    const privacyError = document.getElementById('privacy-error') as HTMLElement;

    newsletterForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const privacyConsent = document.getElementById('privacy-consent') as HTMLInputElement;
      if (!privacyConsent.checked) {
        privacyError.style.display = 'block';
        successMsg.style.display = 'none';
        errorMsg.style.display = 'none';
        return;
      }

      const email = (document.getElementById('newsletter-email') as HTMLInputElement).value;

      btnText.style.display = 'none';
      btnLoading.style.display = 'inline';
      newsletterBtn.disabled = true;
      successMsg.style.display = 'none';
      errorMsg.style.display = 'none';
      privacyError.style.display = 'none';

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });

        if (response.ok) {
          newsletterForm.style.display = 'none';
          successMsg.style.display = 'block';
        } else {
          throw new Error('Failed');
        }
      } catch {
        errorMsg.style.display = 'block';
      } finally {
        btnText.style.display = 'inline';
        btnLoading.style.display = 'none';
        newsletterBtn.disabled = false;
      }
    });
  </script>

  <style>
    /* â”€â”€ Hero â”€â”€ */
    .masthead-label {
      display: inline-block;
      border-top: 1px solid var(--color-border);
      border-bottom: 1px solid var(--color-border);
      padding: 0.3rem 1.25rem;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.3em;
      color: var(--color-muted);
      margin-bottom: 1.5rem;
    }

    .hero-title {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 3.5rem;
      font-weight: 900;
      line-height: 1.1;
      margin-bottom: 1rem;
      color: var(--color-primary);
      letter-spacing: -0.01em;
    }

    .hero-title em {
      font-style: italic;
      font-weight: 700;
    }

    .hero-subtitle {
      font-size: 1.15rem;
      color: var(--color-muted);
      max-width: 500px;
      margin: 0 auto 2rem;
      line-height: 1.6;
      font-weight: 300;
    }

    .hero-ctas {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta-primary {
      background: var(--color-primary);
      color: white;
      padding: 0.9rem 2rem;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      text-decoration: none;
      border-radius: 2px;
      transition: background var(--transition-base);
    }

    .cta-primary:hover {
      background: #112347;
      color: white;
    }

    .cta-secondary {
      border: 1px solid var(--color-border);
      color: var(--color-primary);
      padding: 0.9rem 2rem;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      text-decoration: none;
      border-radius: 2px;
      transition: background var(--transition-base), border-color var(--transition-base);
    }

    .cta-secondary:hover {
      background: var(--color-bg);
      border-color: var(--color-primary);
    }

    /* â”€â”€ Segnavia â”€â”€ */
    .segnavia-section {
      background: #f8fafc;
      border-top: 1px solid var(--color-border);
      border-bottom: 1px solid var(--color-border);
      padding: 3.5rem 2rem;
    }

    .segnavia-inner {
      max-width: var(--max-width);
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .segnavia-header {
      text-align: center;
    }

    .segnavia-title {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--color-primary);
      margin-bottom: 0.5rem;
      border: none;
      padding: 0;
      margin-top: 0;
    }

    .segnavia-desc {
      color: var(--color-muted);
      font-size: 0.95rem;
      max-width: 480px;
      margin: 0 auto;
    }

    /* â”€â”€ In Iter grid â”€â”€ */
    .in-iter-section {
      padding-bottom: 3rem;
    }

    .iter-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      margin-bottom: 1rem;
    }

    .iter-card {
      display: block;
      text-decoration: none;
      color: inherit;
      padding: 1.25rem;
      border: 1px solid var(--color-border);
      background: var(--color-surface);
      border-radius: 2px;
      transition: border-color var(--transition-base), box-shadow var(--transition-base);
    }

    .iter-card:hover {
      border-color: var(--color-primary);
      box-shadow: 0 4px 20px rgba(26, 54, 93, 0.07);
    }

    .iter-date {
      display: block;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--color-muted);
      margin-bottom: 0.5rem;
    }

    .iter-card h3 {
      font-family: 'Playfair Display', Georgia, serif;
      font-size: 1rem;
      font-weight: 700;
      color: var(--color-primary);
      margin-bottom: 0.5rem;
      line-height: 1.35;
    }

    .iter-card:hover h3 {
      text-decoration: underline;
      text-underline-offset: 3px;
    }

    .iter-excerpt {
      font-size: 0.85rem;
      color: var(--color-muted);
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      margin: 0;
    }

    .section-more-link {
      display: block;
      margin-top: 1.5rem;
      text-align: right;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--color-primary);
      text-decoration: none;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      transition: opacity var(--transition-base);
    }

    .section-more-link:hover {
      opacity: 0.7;
    }

    /* â”€â”€ I Dossier section header â”€â”€ */
    .section-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--color-border);
    }

    .section-header h2 {
      margin: 0;
      padding: 0;
      border: none;
    }

    .search-box {
      display: flex;
      align-items: center;
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 24px;
      padding: 0.65rem 1.25rem;
      max-width: 280px;
      transition: border-color var(--transition-base), box-shadow var(--transition-base);
    }

    .search-box:focus-within {
      border-color: var(--color-primary);
      box-shadow: var(--shadow-md);
    }

    .search-icon {
      color: var(--color-muted);
      flex-shrink: 0;
      margin-right: 0.5rem;
      transition: color var(--transition-base);
    }

    .search-box:focus-within .search-icon {
      color: var(--color-primary);
    }

    .search-input {
      flex: 1;
      border: none;
      outline: none;
      background: transparent;
      font-family: 'Inter', sans-serif;
      font-size: 0.9rem;
      color: var(--color-text);
      min-width: 0;
    }

    .search-input::placeholder {
      color: var(--color-muted);
      opacity: 0.8;
    }

    .no-results {
      color: var(--color-muted);
      font-style: italic;
      text-align: center;
      padding: 2rem 1rem;
    }

    /* â”€â”€ Newsletter form â”€â”€ */
    .newsletter-form {
      width: 100%;
      max-width: 460px;
      margin: 0 auto;
    }

    .form-row {
      display: flex;
      gap: 0.5rem;
    }

    .newsletter-form input[type="email"] {
      flex: 1;
      padding: 0.75rem 1rem;
      font-size: 0.95rem;
      font-family: 'Inter', sans-serif;
      border: 1px solid var(--color-border);
      border-radius: 2px;
      background: var(--color-surface);
      color: var(--color-text);
      transition: border-color var(--transition-base);
      min-width: 0;
    }

    .newsletter-form input[type="email"]:focus {
      outline: none;
      border-color: var(--color-primary);
    }

    .newsletter-form input[type="email"]::placeholder {
      color: var(--color-muted);
    }

    .newsletter-form button {
      padding: 0.75rem 1.5rem;
      font-size: 0.85rem;
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
      background: var(--color-primary);
      color: white;
      border: none;
      border-radius: 2px;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      transition: background var(--transition-base);
      white-space: nowrap;
    }

    .newsletter-form button:hover:not(:disabled) {
      background: #112347;
    }

    .newsletter-form button:disabled {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .privacy-checkbox {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 0.75rem;
      font-size: 0.85rem;
    }

    .privacy-checkbox input[type="checkbox"] {
      margin-top: 0.2rem;
      cursor: pointer;
    }

    .privacy-checkbox label {
      color: var(--color-muted);
      cursor: pointer;
      line-height: 1.4;
    }

    .privacy-checkbox a {
      color: var(--color-primary);
      text-decoration: underline;
    }

    .privacy-checkbox a:hover {
      color: #112347;
    }

    .newsletter-message {
      max-width: 480px;
      margin: 0 auto;
      padding: 1.25rem;
      border-radius: 4px;
      font-size: 1rem;
    }

    .newsletter-message.success {
      background: rgba(var(--color-green-rgb), 0.08);
      color: var(--color-green-dark);
    }

    .newsletter-message.error {
      background: rgba(var(--color-red-rgb), 0.08);
      color: var(--color-red);
    }

    @media (max-width: 768px) {
      .iter-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
      }
    }

    @media (max-width: 600px) {
      .hero-title {
        font-size: 2.25rem;
      }

      .hero-subtitle {
        font-size: 1rem;
      }

      .form-row {
        flex-direction: column;
      }

      .newsletter-form input[type="email"],
      .newsletter-form button {
        padding: 0.65rem 1rem;
      }

      .newsletter-form button {
        width: 100%;
      }

      .search-box {
        max-width: none;
        padding: 0.6rem 1rem;
      }

      .section-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .iter-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Base>
