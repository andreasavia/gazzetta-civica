---
// Pagefind search component
---

<div id="search-container">
  <button id="search-trigger" class="search-trigger" aria-label="Apri ricerca">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="search-label">Cerca</span>
  </button>

  <dialog id="search-modal" class="search-modal">
    <div class="search-modal-content">
      <div class="search-modal-header">
        <h2>Cerca articoli</h2>
        <button id="search-close" class="search-close" aria-label="Chiudi ricerca">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      <div id="search"></div>
    </div>
  </dialog>
</div>

<script>
  // @ts-ignore
  import { PagefindUI } from '@pagefind/default-ui';

  const searchTrigger = document.getElementById('search-trigger');
  const searchModal = document.getElementById('search-modal') as HTMLDialogElement;
  const searchClose = document.getElementById('search-close');

  // Initialize Pagefind UI
  new PagefindUI({
    element: '#search',
    showSubResults: true,
    showImages: false,
    excerptLength: 15,
    baseUrl: '/gazzetta-civica',
    translations: {
      placeholder: 'Cerca articoli e leggi...',
      clear_search: 'Cancella',
      load_more: 'Carica altri risultati',
      search_label: 'Cerca in questo sito',
      filters_label: 'Filtri',
      zero_results: 'Nessun risultato per [SEARCH_TERM]',
      many_results: '[COUNT] risultati per [SEARCH_TERM]',
      one_result: '[COUNT] risultato per [SEARCH_TERM]',
      alt_search: 'Nessun risultato per [SEARCH_TERM]. Mostrando risultati per [DIFFERENT_TERM]',
      search_suggestion: 'Nessun risultato per [SEARCH_TERM]. Prova una di queste ricerche:',
      searching: 'Ricerca in corso per [SEARCH_TERM]...'
    }
  });

  // Open modal
  searchTrigger?.addEventListener('click', () => {
    searchModal?.showModal();
    // Focus on search input
    setTimeout(() => {
      const searchInput = document.querySelector('.pagefind-ui__search-input') as HTMLInputElement;
      searchInput?.focus();
    }, 100);
  });

  // Close modal
  searchClose?.addEventListener('click', () => {
    searchModal?.close();
  });

  // Close on backdrop click
  searchModal?.addEventListener('click', (e) => {
    if (e.target === searchModal) {
      searchModal.close();
    }
  });

  // Close on Escape key
  searchModal?.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      searchModal.close();
    }
  });

  // Keyboard shortcut: Ctrl/Cmd + K
  document.addEventListener('keydown', (e) => {
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      searchModal?.showModal();
      setTimeout(() => {
        const searchInput = document.querySelector('.pagefind-ui__search-input') as HTMLInputElement;
        searchInput?.focus();
      }, 100);
    }
  });
</script>

<style>
  .search-trigger {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text);
    cursor: pointer;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .search-trigger:hover {
    background: var(--color-surface);
    border-color: var(--color-primary);
  }

  .search-label {
    display: none;
  }

  @media (min-width: 768px) {
    .search-label {
      display: inline;
    }
  }

  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    max-width: 100%;
    max-height: 100%;
    margin: 0;
    padding: 0;
    border: none;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }

  .search-modal::backdrop {
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }

  .search-modal-content {
    position: relative;
    width: 90%;
    max-width: 800px;
    max-height: 80vh;
    margin: 5rem auto;
    background: var(--color-bg);
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
  }

  .search-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .search-modal-header h2 {
    margin: 0;
    font-size: 1.25rem;
    color: var(--color-primary);
  }

  .search-close {
    background: none;
    border: none;
    color: var(--color-muted);
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
  }

  .search-close:hover {
    color: var(--color-primary);
  }

  #search {
    padding: 1.5rem;
    overflow-y: auto;
    flex: 1;
  }

  @media (max-width: 768px) {
    .search-modal-content {
      width: 95%;
      margin: 2rem auto;
      max-height: 90vh;
    }
  }
</style>

<link href="/_pagefind/pagefind-ui.css" rel="stylesheet">
