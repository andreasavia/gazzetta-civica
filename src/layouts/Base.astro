---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import StructuredData from '../components/StructuredData.astro';

interface Props {
  title: string;
  description?: string;
  fullHeight?: boolean;
  type?: 'website' | 'article';
  image?: string;
  publishedDate?: Date;
  modifiedDate?: Date;
  author?: string;
  tags?: string[];
}

const {
  title,
  description = 'Gazzetta Civica - Legislazione italiana e analisi',
  fullHeight = false,
  type = 'website',
  image,
  publishedDate,
  modifiedDate,
  author,
  tags
} = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/gazzetta-civica/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Gazzetta Civica RSS Feed" href="/gazzetta-civica/rss.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet" />
    <title>{title} | Gazzetta Civica</title>

    <SEO
      title={title}
      description={description}
      type={type}
      image={image}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
      author={author}
      tags={tags}
    />

    {type === 'website' && <StructuredData type="website" />}
  </head>
  <body>
    <header>
      <nav>
        <a href="/gazzetta-civica/" class="logo"><span class="logo-prefix">la</span> Gazzetta Civica</a>
      </nav>
    </header>
    <div class="tricolor-bar"></div>
    <div class="main-wrapper">
      <main>
        <slot />
      </main>
    </div>
    <div class="tricolor-bar tricolor-bar-footer"></div>
    <footer>
      <nav class="footer-links">
        <a href="/gazzetta-civica/chi-siamo">Chi siamo</a>
        <a href="/gazzetta-civica/privacy">Privacy</a>
        <a href="/gazzetta-civica/contatti">Contatti</a>
      </nav>
      <p>&copy; {new Date().getFullYear()} Gazzetta Civica</p>
    </footer>
  </body>
</html>
