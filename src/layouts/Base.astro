---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import StructuredData from '../components/StructuredData.astro';

interface Props {
  title: string;
  description?: string;
  fullHeight?: boolean;
  type?: 'website' | 'article';
  image?: string;
  publishedDate?: Date;
  modifiedDate?: Date;
  author?: string;
  tags?: string[];
}

const {
  title,
  description = 'Gazzetta Civica - Legislazione italiana e analisi',
  fullHeight = false,
  type = 'website',
  image,
  publishedDate,
  modifiedDate,
  author,
  tags
} = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/gazzetta-civica/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Gazzetta Civica RSS Feed" href="/gazzetta-civica/rss.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Playfair+Display:ital,wght@0,700;0,900;1,700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <title>{title} | Gazzetta Civica</title>

    <SEO
      title={title}
      description={description}
      type={type}
      image={image}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
      author={author}
      tags={tags}
    />

    {type === 'website' && <StructuredData type="website" />}
  </head>
  <body>
    <header>
      <nav class="site-nav">
        <a href="/gazzetta-civica/" class="logo">
          <span class="logo-wordmark"><span class="logo-prefix">la</span> Gazzetta Civica</span>
          <span class="logo-tagline">L'informazione normativa trasparente</span>
        </a>
        <div class="nav-links">
          <a href="/gazzetta-civica/in-iter/" class="nav-link">In Iter</a>
          <a href="/gazzetta-civica/dossier/" class="nav-link">I Dossier</a>
        </div>
      </nav>
    </header>
    <div class="tricolor-bar"><span class="tricolor-segment tricolor-segment--green"></span><span class="tricolor-segment tricolor-segment--white"></span><span class="tricolor-segment tricolor-segment--red"></span></div>
    <div class="main-wrapper">
      <main {...(type === 'article' ? { 'data-pagefind-filter': 'type:article' } : {})}>
        <slot />
      </main>
    </div>
    <div class="tricolor-bar tricolor-bar-footer"><span class="tricolor-segment tricolor-segment--green"></span><span class="tricolor-segment tricolor-segment--white"></span><span class="tricolor-segment tricolor-segment--red"></span></div>
    <footer>
      <div class="footer-top">
        <div class="footer-brand">
          <span class="footer-logo">La Gazzetta Civica</span>
          <p class="footer-mission">
            Un progetto indipendente per l'informazione civica. Monitoriamo il Parlamento
            affinché ogni cittadino possa orientarsi nel sistema normativo italiano.
          </p>
        </div>
        <div class="footer-nav-col">
          <span class="footer-nav-label">Navigazione</span>
          <nav class="footer-links">
            <a href="/gazzetta-civica/in-iter/">In Iter</a>
            <a href="/gazzetta-civica/dossier/">I Dossier</a>
            <a href="/gazzetta-civica/chi-siamo">Chi siamo</a>
            <a href="/gazzetta-civica/privacy">Privacy</a>
            <a href="/gazzetta-civica/contatti">Contatti</a>
          </nav>
        </div>
      </div>
      <div class="footer-legal">
        <p>&copy; {new Date().getFullYear()} La Gazzetta Civica — Tutti i diritti riservati.</p>
        <p class="footer-disclaimer">
          I contenuti originali sono di proprietà esclusiva de La Gazzetta Civica.
          Le analisi hanno scopo informativo e non costituiscono consulenza legale.
        </p>
      </div>
    </footer>
  </body>
</html>
