---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import StructuredData from '../components/StructuredData.astro';

interface Props {
  title: string;
  description?: string;
  fullHeight?: boolean;
  type?: 'website' | 'article';
  image?: string;
  publishedDate?: Date;
  modifiedDate?: Date;
  author?: string;
  tags?: string[];
}

const {
  title,
  description = 'Gazzetta Civica - Legislazione italiana e analisi',
  fullHeight = false,
  type = 'website',
  image,
  publishedDate,
  modifiedDate,
  author,
  tags
} = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/gazzetta-civica/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Gazzetta Civica RSS Feed" href="/gazzetta-civica/rss.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Playfair+Display:ital,wght@0,700;0,900;1,700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <title>{title} | Gazzetta Civica</title>

    <SEO
      title={title}
      description={description}
      type={type}
      image={image}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
      author={author}
      tags={tags}
    />

    {type === 'website' && <StructuredData type="website" />}
  </head>
  <body>
    <header>
      <nav class="site-nav">
        <a href="/gazzetta-civica/" class="logo">
          <span class="logo-wordmark"><span class="logo-prefix">la</span> Gazzetta Civica</span>
          <span class="logo-tagline">L'informazione normativa trasparente</span>
        </a>
      </nav>
    </header>
    <div class="tricolor-bar"><span class="tricolor-segment tricolor-segment--green"></span><span class="tricolor-segment tricolor-segment--white"></span><span class="tricolor-segment tricolor-segment--red"></span></div>
    <div class="main-wrapper">
      <main {...(type === 'article' ? { 'data-pagefind-filter': 'type:article' } : {})}>
        <slot />
      </main>
    </div>
    <div class="tricolor-bar tricolor-bar-footer"><span class="tricolor-segment tricolor-segment--green"></span><span class="tricolor-segment tricolor-segment--white"></span><span class="tricolor-segment tricolor-segment--red"></span></div>
    <footer>
      <div class="footer-cta">
        <div class="footer-cta-inner">
          <div class="footer-cta-text">
            <p class="footer-cta-label">Segnavia — Newsletter settimanale</p>
            <p class="footer-cta-pitch">Il Parlamento in sintesi, ogni settimana. Gratis.</p>
          </div>
          <form class="footer-cta-form" action="#segnavia" id="footer-newsletter-form">
            <input
              type="email"
              id="footer-newsletter-email"
              name="email"
              placeholder="La tua email"
              required
              autocomplete="email"
            />
            <button type="submit">Iscriviti</button>
          </form>
        </div>
      </div>

      <div class="footer-inner">
        <div class="footer-brand">
          <a href="/gazzetta-civica/" class="footer-logo">
            <span class="footer-logo-prefix">la</span> Gazzetta Civica
          </a>
          <p class="footer-tagline">L'informazione normativa trasparente</p>
        </div>

        <div class="footer-nav-col">
          <span class="footer-nav-label">Sezioni</span>
          <nav class="footer-links">
            <a href="/gazzetta-civica/in-iter/">In Iter</a>
            <a href="/gazzetta-civica/dossier/">I Dossier</a>
          </nav>
        </div>

        <div class="footer-nav-col">
          <span class="footer-nav-label">Info</span>
          <nav class="footer-links">
            <a href="/gazzetta-civica/contatti">Contatti</a>
            <a href="/gazzetta-civica/privacy">Privacy</a>
            <a href="/gazzetta-civica/rss.xml">RSS</a>
          </nav>
        </div>

        <div class="footer-mission-col">
          <span class="footer-nav-label">La missione</span>
          <p class="footer-mission">
            Rendere trasparente e comprensibile l'attività legislativa italiana,
            abbattendo le barriere del linguaggio burocratico per il cittadino.
          </p>
        </div>
      </div>

      <div class="footer-legal">
        <p>&copy; {new Date().getFullYear()} La Gazzetta Civica — Tutti i diritti riservati.</p>
        <p class="footer-disclaimer">Le analisi hanno scopo informativo e non costituiscono consulenza legale.</p>
      </div>
    </footer>
  </body>
</html>
